{
  "name": "hono-discord-verify",
  "version": "0.4.2",
  "description": "A Hono middleware for verifying Discord interactions payload signature.",
  "type": "module",
  "files": [
    "lib"
  ],
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "lint-staged": "lint-staged",
    "check": "pnpm run \"/^(build|lint|format:check)$/\"",
    "prepare": "husky",
    "release": "env-cmd release-it"
  },
  "lint-staged": {
    "!(*.{js,mjs,cjs,ts})": "prettier --ignore-unknown --write",
    "*.{js,mjs,cjs,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "hono",
    "discord",
    "middleware"
  ],
  "author": "WhistlingZephyr",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WhistlingZephyr/hono-discord-verify.git"
  },
  "bugs": {
    "url": "https://github.com/WhistlingZephyr/hono-discord-verify/issues"
  },
  "homepage": "https://github.com/WhistlingZephyr/hono-discord-verify#readme",
  "dependencies": {
    "discord-interactions": "^4.1.0",
    "env-cmd": "^10.1.0",
    "hono": "^4.6.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/format": "^19.5.0",
    "@commitlint/types": "^19.5.0",
    "@eslint/js": "^9.12.0",
    "@release-it/conventional-changelog": "^8.0.2",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint__js": "^8.42.3",
    "discord-api-types": "^0.37.102",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "release-it": "^17.10.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.10.0",
    "vite": "^5.4.9"
  }
}
